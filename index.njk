---
layout: layout.njk
title: Governor Keywords Filter
---
{% from './_includes/_components.njk' import keywordcards,keywordheader,keywordfilter  %}
<div class="ny-flex 
            ny-flex-col">
    <section class="ny-bg-ny-blue-second 
                      ny-p-10">
        {{keywordheader({
                keyword: "Coronavirus"
        })  
        }}
    </section>
    <div class="ny-flex 
                ny-flex-col 
                lg:ny-flex-row">
        <div class="ny-w-full 
                    lg:ny-w-1/4 
                  ny-bg-black 
                    ny-p-8 
                  ny-text-white">
            {{keywordfilter({
                filter:[
                    {
                        name: "filter",
                        terms: [
                            {
                                term: "Press Release"
                            },
                            {
                                term: "Schedule"
                            },
                            {
                                term: "Executive Order"
                            },
                            {
                                term: "Legislation"
                            }
                        ]
                    },
                    {
                        name: "refine"
                    },
                    {
                        name: "date range"
                    }
                ]
            })  
            }}
        </div>
        <div class="ny-p-8 ny-flex-auto">
            {{keywordcards({
                filtercard: [
                    {
                        type: "event",
                        month: "dec",
                        day: "15",
                        longdate: "Dec 15, 2022",
                        time: "10:00 AM",
                        location: "875 Erskine Street, Brooklyn, NY 11239",
                        keyword: "Governor",
                        title: "Governor Hochl is in New York City",
                        image: "https://www.governor.ny.gov/sites/default/files/styles/results/public/thumbnails/image/AlbanyAerial3_hero.jpg?h=fd99c4f7&amp;itok=yfA147fI",
                        imagealt: "New York City Skyling",
                        imageplaceholder:"/img/placeholder/NYGov_Events_Square.png",
                        description:"not usually here",
                        link:"https://www.governor.ny.gov/schedule/governor-hochul-new-york-city-159"
                    }
                ]
            })  
            }}
        </div>
    </div>
</div> 